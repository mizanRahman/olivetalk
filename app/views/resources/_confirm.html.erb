<%= simple_form_for([@resource], remote: true) do |f| %>
<div class="modal-header">
<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
<h3 id="myModalLabel">Add a Resource</h3>
</div>
<div class="modal-body" style="max-height:500px !important">
<p style="text-align:left;font-size:12px;line-height:14px;color:#555">Please confirm the resource title and description.</p>
<hr />
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, :input_html => { :style => "width:500px" } %>
    <%= f.input :description, :input_html => { :style => "width:500px;height:150px" } %>
  </div>


  </div>
<div class="modal-footer">
<button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
<button class="btn btn-primary">Add a Resource</button>
</div>
<% end %>
