<%= simple_form_for(@resource) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :url %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :read_count %>
    <%= f.input :votes %>
    <%= f.input :is_approved %>
    <%= f.association :user %>
    <%= f.association :topic %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
