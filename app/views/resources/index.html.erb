<h1>Listing resources</h1>

<table>
  <tr>
    <th>Url</th>
    <th>Title</th>
    <th>Description</th>
    <th>Read count</th>
    <th>Votes</th>
    <th>Is approved</th>
    <th>User</th>
    <th>Topic</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @resources.each do |resource| %>
  <tr>
    <td><%= resource.url %></td>
    <td><%= resource.title %></td>
    <td><%= resource.description %></td>
    <td><%= resource.read_count %></td>
    <td><%= resource.votes %></td>
    <td><%= resource.is_approved %></td>
    <td><%= resource.user %></td>
    <td><%= resource.topic %></td>
    <td><%= link_to 'Show', resource %></td>
    <td><%= link_to 'Edit', edit_resource_path(resource) %></td>
    <td><%= link_to 'Destroy', resource, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

