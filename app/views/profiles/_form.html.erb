<%= simple_form_for(@profile, :html => { :multipart => true }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :country %>
    <%= f.input :conflict %>
    <%= f.input :about_me %>
    <%= f.input :blog_url %>
    <%= f.input :facebook_url %>
    <%= f.input :twitter_url %>
    <%= f.association :user %>
    <%= f.file_field :avatar %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
