<%= simple_form_for(@topic) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
		
	<%= f.input :content, :as => :text, :input_html => { :rows => 8 } %>

    <%= f.association :network %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
