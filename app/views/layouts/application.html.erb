<!DOCTYPE html>
<html>
<head>
  <title>OliveTalk</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <script src="http://scripts.embed.ly/p/0.1/jquery.preview.full.min.js" type="text/javascript"></script>
  <link rel="stylesheet" href="http://scripts.embed.ly/p/0.1/css/preview.css" />
</head>
<body>

<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
  	<div class="container">
	    <a class="brand" href="<%= root_path %>">OliveTalk</a>
    	<ul class="nav">
			<li class="<%= 'active' if current_page?(root_path) %>"><%= link_to "Home", root_path %></li>
			<li class="divider-vertical"></li>
			<% if can? :read, :home %>
    		<li class="<%= 'active' if current_page?(topics_path) %>"><%= link_to "Engage", topics_path %></li>
    		<li class="divider-vertical"></li>
    		<li class="<%= 'active' if current_page?(resources_path) %>"><%= link_to "Pinboard", resources_path %></li>
    		<li class="divider-vertical"></li>
     	    <li><a href="#">Network</a></li>
     	 	<li class="divider-vertical"></li>
     	 	<li><a href="#">Olive University</a></li>
      		<li class="divider-vertical"></li>
      		<% end %>
    	</ul>
    	<form class="navbar-search pull-left">
 			 <input type="text" class="search-query" placeholder="Search">
		</form>
		
		<ul class="nav pull-right">
			<% if user_signed_in? %>
				<li><%= link_to 'My Profile', profile_path(current_user.profile.id) %></li>
				<li class="divider-vertical"></li>
			  <li class="dropdown">
			  	<a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-user"></i> <b class="caret"></b></a>
				<ul class="dropdown-menu">
					<li><%= link_to 'Edit profile', edit_profile_path(current_user.profile.id) %></li>
					<li><%= link_to 'Edit account', edit_user_registration_path %></li>
					<li><a href="#">Submit Feedback</a></li>
					<li class="divider"></li>
					<li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
				</ul>
			<% else %>
			  <li><%= link_to "Sign up", new_user_registration_path %></li>
			  <li class="divider-vertical"></li>
			  <li><%= link_to "Login", new_user_session_path %></li>
			<% end %>
			<% if can? :read, :home %>
			<li class="divider-vertical"></li>
			<li><a href="#"><span class="badge badge-important" style="font-size:12px;padding-left:8px;padding-right:8px;">4</span> </a></li>
			<% end %>
		</ul>
	</div>
  </div>
</div>

<div class="container">
	<%= bootstrap_flash %>
	<% if can? :read, :home %>
	<%= render_breadcrumbs %>
	<% end %>
	<%= yield %>
</div>





<%= yield :scripts %>
</body>
</html>
