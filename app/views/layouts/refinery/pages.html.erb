<!DOCTYPE html>
<html>
<head>
  <title>OliveTalk</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <script src="http://scripts.embed.ly/p/0.1/jquery.preview.full.min.js" type="text/javascript"></script>
  <link rel="stylesheet" href="http://scripts.embed.ly/p/0.1/css/preview.css" />
</head>
<body>

<div class="navbar navbar-fixed-top navbar-inverse">

  <div class="navbar-inner">
    <div class="container">
      <a class="brand" href="<%= root_path %>">OliveTalk</a>
      <ul class="nav">
      <li class="<%= 'active' if current_page?('/') %>"><%= link_to "Home", '/' %></li>
      <li class="divider-vertical"></li>
      </ul>
    
    
  </div>
  </div>
</div>




<div class="container">
  <% if can? :read, :home %>
    <%= render_breadcrumbs %>
  <% end %>
  <div class="row">
    <%= bootstrap_flash %>
  </div>
  <%= yield %>

</div>




<%= yield :scripts %>
</body>
</html>
