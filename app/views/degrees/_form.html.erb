<%= render 'common/submenu' %>

<%= simple_form_for([:profile,@degree]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :university %>
    <%= f.input :type_of_degree %>
    <%= f.input :primary_focus %>
    <%= f.input :secondary_focus %>
    <%= f.input :graduation_year, as: :date, start_year: Date.today.year - 40,
                              end_year: Date.today.year + 7, discard_day: true,
                              order: [:year] %>
    <%= f.input :is_current %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
