<h1>Listing degrees</h1>

<table>
  <tr>
    <th>Profile</th>
    <th>University</th>
    <th>Type of degree</th>
    <th>Primary focus</th>
    <th>Secondary focus</th>
    <th>Start date</th>
    <th>End date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @degrees.each do |degree| %>
  <tr>
    <td><%= degree.profile %></td>
    <td><%= degree.university %></td>
    <td><%= degree.type_of_degree %></td>
    <td><%= degree.primary_focus %></td>
    <td><%= degree.secondary_focus %></td>
    <td><%= degree.start_date %></td>
    <td><%= degree.end_date %></td>
    <td><%= link_to 'Show', degree %></td>
    <td><%= link_to 'Edit', edit_degree_path(degree) %></td>
    <td><%= link_to 'Destroy', degree, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

