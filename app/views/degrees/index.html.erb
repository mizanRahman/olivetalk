<%= render 'common/submenu' %>


<% @degrees.each do |degree| %>
<div style="margin-bottom:10px">
		<%= degree.university.name %> - <%= degree.end_date.year %><br />
		<%= degree.type_of_degree %> in <%= degree.primary_focus %>
		<%= link_to 'Edit', edit_degree_path(degree) %> - <%= link_to 'Destroy', degree, method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
<% end %>


<%= link_to 'Add a Degree', new_profile_degree_path, :class => 'btn btn-primary' %>
